#!/bin/sh
set -e

BIN="crypteia-${BUILD_OS}${BUILD_SUFFIX}"
LIB="libcrypteia-${BUILD_OS}${BUILD_SUFFIX}.so"

rm -rf ./build
rm -rf ./target
rm -rf ./python/crypteia/build
rm -rf ./python/crypteia/src/crypteia.egg-info

mkdir -p ./build ./target

cargo build \
  --release \
  --target "${BUILD_TARGET}"

cp "./target/${BUILD_TARGET}/release/crypteia" "./build/${BIN}"
cp ./target/${BUILD_TARGET}/release/libcrypteia.so "./build/${LIB}"

cd ./build
strip "$BIN"
chmod +x "$BIN"
zip -r "${BIN}.zip" "$BIN"
zip -r "libcrypteia-${BUILD_OS}${BUILD_SUFFIX}.zip" "$LIB"
cd ..

rm -rf ./package/opt
mkdir -p ./package/opt/extensions
mkdir -p ./package/opt/lib
cp "./build/crypteia-${BUILD_OS}${BUILD_SUFFIX}" ./package/opt/extensions/crypteia
cp "./build/libcrypteia-${BUILD_OS}${BUILD_SUFFIX}.so" ./package/opt/lib/libcrypteia.so

cd ./python/crypteia && pip install . --target ../../build --upgrade && cd ../..
cp ./python/usercustomize.py ./build/

mkdir -p ./package/opt/crypteia/python/crypteia
cp -r ./build/crypteia/ ./package/opt/crypteia/python/
cp -r ./build/crypteia-*.dist-info ./package/opt/crypteia/python/
cp -r ./build/wrapt/ ./package/opt/crypteia/python/crypteia/
cp ./python/usercustomize.py ./package/opt/crypteia/python/usercustomize.py
